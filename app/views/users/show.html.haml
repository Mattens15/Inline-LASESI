!!!5
%html{:lang => "it"}
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Your Profile Inline
    %meta{:charset => "utf-8"}/
    %meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}/
  %body
    .container-fluid{:style => 'padding-left: 15%,padding-right:15%'}
      .row
        .col-lg-6
          %label
            %h1 USERNAME:
            %p #{@user.username}
          %br
          %label
            %h1 EMAIL:
            %p #{@user.email}
          %br
          =link_to user_achievements_path(@user) do
            %input.btn.btn-sm.btn-success{:type => "submit", :value => "Achievements"}
        .col-lg-6
          %label
            %h1 YOUR ID: 
            %p  #{@hashed}
          %br
          %label
            %h1 REFERRAL LINK:
            %a{:href => "http://inlineapp.com/login"} http://inlineapp.com/#{@hashed}
          %br
          %br
          =link_to edit_user_path(@user)  do 
            %input.btn.btn-sm.btn-warning{:type => "submit", :value => "Edit Profile"}/
          =link_to @user, method: :delete, title: 'Delete User', :data => {:confirm => 'Are you sure you want to delete your profile?'} do
            %input.btn.btn-sm.btn-danger{:type =>"submit", :value => "Delete profile"}/

.container
	.row
	.col-lg-6
		%label
			%h2 USERNAME:
			= @user.username
		%br/
		%label  
			%h2 EMAIL
			= @user.email
	.col-lg-6
		%label
			%h2 ID
	.row
		%h3 Achievements
	.row 
		%strong Rooms Attended: 
		%p#rooms-attended
			=@user.rooms_attended


	.row
		.col-12
			=month_calendar(attribute: :time_from, end_attribute: :time_to, events: @events) do |day, events|
				%div
					%strong= day.to_s(:long)
					-events.each do |event|
						%div
							= link_to event.name, event
		
