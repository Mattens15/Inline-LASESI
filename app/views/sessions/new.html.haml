
.container-fluid{:style => "padding-left:10%;padding-right:10%;"}
  .row
    .col-lg-12{:style => "margin-top:5%"}
      %center>
        %h1 Login
        %br
        = form_for(:session, url: login_path) do |f|
          =f.label :email
          =f.email_field :email, class: 'form-control'
          %br
          =f.label :password
          =f.password_field :password, class: 'form-control'
          %br
          =f.label :remember_me, class: "checkbox inline" do
            = f.check_box :remember_me
            %span.h2 Remember me on this computer
            = f.submit "Log in", class: "btn btn-success", style: "margin-left: 5%", id: 'login_button'
          =link_to "(forgot password?)", new_password_reset_path
          = link_to "Connect With Facebook", "/auth/facebook"
          = link_to "Connect With Google", "/auth/google_oauth2"
        %p
          New user? #{link_to "Sign up now!", signup_path}
